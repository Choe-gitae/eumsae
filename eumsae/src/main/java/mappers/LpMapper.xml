<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Lp">
	<insert id="insertLpinfo" parameterType="LpVO" useGeneratedKeys="true" keyProperty="infono" keyColumn="INFONO">
		INSERT INTO lpinfo(infono,genre,title,singer,region,content,lpdate,jpg,cjpg,jpg_size
		<if test="mp3 != null">
		,mp3,cmp3,mp3_size
		</if>
		)		
		VALUES (lp_info_seq.nextval,#{genre},#{title},#{singer},#{region},#{content},#{lpdate},#{jpg},#{cjpg},#{jpgSize}
		<if test="mp3 != null">
		,#{mp3},#{cmp3},#{mp3Size}
		</if>
		)
	</insert>	
	
	<insert id="insertLp" parameterType="LpVO" useGeneratedKeys="true" keyProperty="lpno" keyColumn="LPNO">
		INSERT INTO lp(lpno,infono,cnt,price) 
		VALUES (lp_seq.nextval,#{infono},#{cnt},#{price})
	</insert>
	
	<select id="genreLp" parameterType="string" resultType="LpVO">
		SELECT infono, title, singer, cjpg FROM lpinfo WHERE genre=#{category}
	</select>
	
	<select id="selectLp" parameterType="hashmap" resultType="LpVO">
		SELECT i.infono infono, i.genre genre, i.title title, i.singer singer, i.region region, i.lpdate lpdate, i.cjpg cjpg, l.price price
		FROM lpinfo i INNER JOIN lp l
		ON i.infono = l.infono
		WHERE ${searchCon} LIKE '%${searchKey}%'
	</select>
	
	<delete id="deleteLp" parameterType="LpVO">
		DELETE FROM lpinfo WHERE infono=#{infono}
	</delete>

</mapper>